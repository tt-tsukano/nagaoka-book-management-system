@page
@model RegisterModel
@{
    ViewData["Title"] = "ユーザー登録画面";
}

<div class="row">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>ユーザー情報を入力してください</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <p>Email:</p>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="メールアドレスを入力してください"/>
            @* <label asp-for="Input.Email">Email</label> *@
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <br />
            <p>Password:</p>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="パスワードを入力してください"/>
            @* <label asp-for="Input.Password">Password</label> *@
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <br />
            <p>Confirm Password:</p>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="パスワードをもう一度入力してください"/>
            @* <label asp-for="Input.ConfirmPassword">Confirm Password</label> *@
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="mt-3">
                <button id="registerSubmit" type="submit" class="btn btn-primary">登録</button>
            </div>
        </form>
