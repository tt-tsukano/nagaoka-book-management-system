@model BookManagement.Models.Book
@{
    ViewData["Title"] = "貸出確認画面";
}

<h1>貸出確認画面</h1>

<h3>こちらの書籍で貸出申請を行ってもよろしいですか？</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                書籍
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                ID
            </td>
            <td>
                <!-- 引数bookのIdを表示 -->
                @Html.DisplayFor(model => model.Id)
                
            </td>
        </tr>
        <tr>
            <td>
                タイトル
            </td>
            <td>
                <!-- 引数bookのTitleを表示 -->
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td>
                出版年
            </td>
            <td>
                <!-- 引数bookのPublishedYearを表示 -->
                @Html.DisplayFor(model => model.PublishedYear) 年
            </td>
        </tr>
    </tbody>
</table>

<!-- 貸出申請を行うボタンを配置 -->
<form asp-action="Confirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">申請する</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">戻る</a>
</form>