@model BookManagement.Models.Book

@{
    ViewData["Title"] = "書籍登録";
}

<h1>書籍登録</h1>

<h4>登録情報を入力してください</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">タイトル</label>
                <input asp-for="Title" class="form-control" placeholder="タイトルを入力してください"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <!-- 著者の情報を入力するテキストエリア -->
            <div class="form-group">
                <label asp-for="Author" class="control-label">著者</label>
                <input asp-for="Author" class="form-control" placeholder="例)山田 太郎 ※姓と名の間は半角スペースを開けてください"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishedYear" class="control-label">出版年(初版発行年)</label>
                <input asp-for="PublishedYear" class="form-control" placeholder="例)2000 ※西暦で記入して下さい"/>
                <span asp-validation-for="PublishedYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="mt-2">
                    <input type="submit" value="登録" class="btn btn-primary" />
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">戻る</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
