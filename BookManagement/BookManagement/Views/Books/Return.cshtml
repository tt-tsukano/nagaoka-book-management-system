@model BookManagement.Models.Book
@{
        ViewData["Title"] = "返却確認画面";
}

<h1>返却確認画面</h1>

<h3>こちらの書籍を返却しますか？</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                書籍
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                ID
            </td>
            <td>
                <!-- 引数bookのIdを表示 -->
                @Html.DisplayFor(model => model.Id)
            </td>
        </tr>
        <tr>
            <td>
                タイトル
            </td>
            <td>
                <!-- 引数bookのTitleを表示 -->
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td>
                出版年
            </td>
            <td>
                <!-- 引数bookのPublishedYearを表示 -->
                @Html.DisplayFor(model => model.PublishedYear) 年
            </td>
        </tr>
    </tbody>
</table>

<!-- 返却を行うボタンを配置 -->
<form asp-action="Return" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">返却する</button>
    <a asp-action="Index" class="btn btn-secondary">戻る</a>
</form>