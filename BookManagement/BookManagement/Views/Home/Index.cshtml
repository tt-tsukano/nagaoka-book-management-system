@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>書籍一覧</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>出版年</th>
                <th>返却予定日</th>
                <th>現在の貸出状況</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.PublishedYear</td>
                    <td>
                        @if(@item.ReturnDate == null)
                        {
                            <h6>-</h6>
                        }
                        else
                        {
                            @item.ReturnDate
                        }
                    </td>
                    <td>
                        @if (item.BorrowedStatus == true)
                        {
                            <a asp-controller="Book" asp-action="Return" asp-route-id="@item.Id">
                                <input type="submit" value="返却" class="btn btn-success" />
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Book" asp-action="Confirm" asp-route-id="@item.Id">
                                <input type="submit" value="貸出申請" class="btn btn-primary" />
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
