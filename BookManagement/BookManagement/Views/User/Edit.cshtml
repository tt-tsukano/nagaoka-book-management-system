@model BookManagement.ViewModels.UserEditViewModel
@{
    ViewBag.Title = "ユーザー情報編集";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <p class="text-muted">※変更したい項目のみ入力してください</p>

    <form asp-action="Edit" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="@User.Identity.Name"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NewPassword" class="form-label"></label>
            <input asp-for="NewPassword" type="password" class="form-control"/>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
            <small class="text-muted">※変更しない場合は空欄にしてください</small>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="Index" class="btn btn-secondary">戻る</a>
        </div>
    </form>